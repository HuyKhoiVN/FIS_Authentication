@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- HTML -->
<div id="localStorageDisplay" class="mt-3"></div>

<!-- jQuery Script -->
<script>
    $(document).ready(function () {
        // Kiểm tra sự tồn tại của localStorage.test
        const testData = localStorage.getItem("token");

        if (testData) {
            // Tạo thẻ input Bootstrap readonly
            const inputField = `
                <div class="form-group">
                    <label for="localStorageInput">Dữ liệu từ localStorage.test:</label>
                    <input type="text" class="form-control" id="localStorageInput" value="${testData}" readonly>
                </div>
            `;

            // Thêm thẻ input vào div có id="localStorageDisplay"
            $("#localStorageDisplay").html(inputField);
        } else {
            // Hiển thị thông báo nếu không có dữ liệu
            $("#localStorageDisplay").html('<p class="text-danger">Không có dữ liệu trong localStorage.test</p>');
        }
    });
</script>

